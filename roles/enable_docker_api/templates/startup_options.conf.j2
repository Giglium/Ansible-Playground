# /etc/systemd/system/docker.service.d/override.conf
[Service]
ExecStart=
ExecStart=/usr/bin/dockerd -H fd:// --containerd=/run/containerd/containerd.sock --tlsverify --tlscacert={{ docker_cert_ca_file }} --tlscert={{ docker_cert_se_file }} --tlskey={{ docker_key_se_file }}  -H=tcp://{{ docker_api_ip }}:{{ docker_api_port }}
